<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFFDFAF1">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Список дел" FontSize="26"/>
        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="0" Margin="5" Background="#FDF5DF" Name ="listToDo">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Name}"/>
                        <TextBlock Text="{Binding Path=Date, StringFormat=dd.mm.yyyy}"/>
                        <TextBlock Text="{Binding Path=Description}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Background="#FFFDFAF1">
            <CheckBox x:Name="checkbox1" IsChecked="True" Content="Добавления новых дел" Height="29" Margin="10,34,10,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Background="#FFFDFAF1">
            <ListBox Grid.Column="0" Grid.Row="1" Height="303" Width="380"
                     Background="#FDF5DF" SelectionChanged="ListBox_SelectionChanged_1"/>


        </StackPanel>


        <GroupBox Grid.Column="1" Grid.Row="1" Background="#FFFDFAF1" >


            <StackPanel>
                <ListBox Grid.Column="0" Grid.Row="1" Height="303" Width="380"
                        Background="#FDF5DF">
                    <TextBlock Text="Название:" FontSize="13" Height="16" />
                </ListBox>
                <TextBox FontSize="13" Height="22" Width="363" Margin="-1,-520,1,10"/>

                <TextBlock Text="Выполнить до:" FontSize="13" Height="16" Margin="10,-465,10,10" Width="376" />

                <DatePicker IsDropDownOpen="True" Margin="10.5,-415,12,0" Height="24" Width="362" />

                <StackPanel>
                    <TextBlock Text="Описание:" Margin="10,-335,10,10" FontSize="13" Height="24"/>

                    <TextBox  AcceptsReturn="True"    VerticalScrollBarVisibility="Visible" MaxLines="8" AcceptsTab="True" FontSize="13" Margin="10,-160,13,13"/>
                </StackPanel>

                
                
            </StackPanel>
            
            

        </GroupBox>

        <StackPanel Grid.Column="0" Grid.Row="2" Background="#FFFDFAF1">
            <ListBox Height="33" Width="115" Margin="10,8,10,10" 
                     Background="#5EBEC4"/>
            <Button x:Name="Delete" Content="Удалить дела" FontSize="15" Margin="100,-45,100,10" Width="114" Height="32" Click="Delete_Click" Background="#5EBEC4"/>
        </StackPanel>


        <StackPanel Grid.Column="2" Grid.Row="2" Background="#FFFDFAF1">
            <StackPanel Grid.Column="0" Grid.Row="2" Background="#FFFDFAF1">
                <ListBox Height="33" Width="115" Margin="10,8,10,10" 
        Background="#5EBEC4"/>
                <Button x:Name="Undelete" Content="Добавить дела" FontSize="15" Margin="100,-45,100,10" Width="114" Height="32" Click="Undelete_Click" Background="#5EBEC4"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
